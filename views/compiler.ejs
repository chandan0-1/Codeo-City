      <link rel="stylesheet" href="css/compiler.css">


<div id="Container">

  <div id="form-Container">
      <form action="/send/request" method="POST">
        <textarea
          name="code"
          id="code"
          placeholder="Enter ur code here"
          cols="30"
          rows="10"
        ></textarea>


        <div id="Options">
            <label for="category">Language:&nbsp </label>
            <input type="text" name="language" placeholder="Choose Language:" id="category-header" list="Language" required>  
              
              <datalist id="Language">
                  <option value="py">
                  <option value="Java">
                  <option value="C++">
                  <option value="HTML">
                  <option value="Javascript">
              </datalist> 

              <input id="run-btn" type="submit" value="Compile and Run">

              <textarea 
              name="input"
              id="input"
              placeholder="Enter input here"
              cols="30"
              rows="10"
            ></textarea>

              

            
          </div>
        </form>
  </div>
    
    <div id="Output-window">
      <p id="output-header">Output:</p>
      <p id="output"> <%= out %> </p>
    </div>

</div>